<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="#f4073a"/>
            <corners android:radius="@dimen/borde_radios"></corners>
        </shape>

    </item>

    <item android:state_enabled="false">

        <shape>
            <solid android:color="#0ddc39"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#9c7115"
                android:endColor="#2ddf0e"
                android:angle="270"
                />
            <corners android:radius="@dimen/borde_radios"/>
        </shape>
    </item>
</selector>
