<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="#2c09ef"/>
            <corners android:radius="@dimen/borde_radios"></corners>
        </shape>

    </item>

    <item android:state_enabled="false">

        <shape>
            <solid android:color="#07ef39"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#60f45e"
                android:endColor="#cec77a"
                android:angle="270"
                />
            <corners android:radius="@dimen/borde_radios"/>
        </shape>
    </item>
</selector>

