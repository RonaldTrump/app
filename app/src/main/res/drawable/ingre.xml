<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="#A66817"/>
            <corners android:radius="@dimen/borde_radios"></corners>
        </shape>

    </item>

    <item android:state_enabled="false">

        <shape>
            <solid android:color="#986624"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#F6C37F"
                android:endColor="#F1AB50"
                android:angle="270"
                />
            <corners android:radius="@dimen/radio_boton"/>
        </shape>
    </item>
</selector>