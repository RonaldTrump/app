<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"><item android:state_pressed="true">

    <shape>
        <solid android:color="#ae5551"/>
        <corners android:radius="@dimen/borde_radios"></corners>
    </shape>

</item>

    <item android:state_enabled="false">

        <shape>
            <solid android:color="#15bf3a"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#e7b50f"
                android:endColor="#afb9c6"
                android:angle="270"
                />
            <corners android:radius="@dimen/borde_radios"/>
        </shape>
    </item>
</selector>