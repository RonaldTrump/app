<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape>
            <solid android:color="#1f1848"/>
            <corners android:radius="@dimen/borde_radios"></corners>
        </shape>

    </item>

    <item android:state_enabled="false">

        <shape>
            <solid android:color="#ccc01e"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:startColor="#159c95"
                android:endColor="#7840a6"
                android:angle="270"
                />
            <corners android:radius="@dimen/borde_radios"/>
        </shape>
    </item>
</selector>
